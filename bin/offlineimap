def OfflineImap():

	print("""

 _ __  _ __ __ _ _   _ 
| '_ \| '__/ _` | | | |
| |_) | | | (_| | |_| |
| .__/|_|  \__,_|\__, |
|_|              |___/ 

A lectio divina prayer helper built with python

	https://github.com/bradlindblad/lectio_divina.git

	""")




	# Audio beep setup
	# duration = 0.1  # seconds
	# freq = 430  # Hzz


	# -- FUNCTIONS ---------------------------------------


		# os.system('play -nq -t alsa synth {} sine {}'.format(duration, freq))


	# -- START THE SESSION ---------------------------------

	# Setup
	input("Hit ENTER to start a lectio divina session")

	time.sleep(3)

	print('''
	Step 1: Find a piece of scripture, anywhere from 1 sentence to 1 paragraph. 
	Ideally, one where Jesus is doing something.


	''')

	input('''
	Hit RETURN when you've found one
	''')

	time.sleep(1)


	# -- Relax ---------------------------------------------
	print('''
	Sit down and relax...
	''')

	time.sleep(2)

	print("""

	


















	""")

	print('''
	Let's begin by relaxing. Breathe deeply for a bit.
	''')

	time.sleep(70)
	# time.sleep(3)

	print("""

	


















	""")
	# playBell()

	# -- Lectio ---------------------------------------------------

	print("""
	                
 _ __ ___  __ _  __| |
| '__/ _ \/ _` |/ _` |
| | |  __/ (_| | (_| |
|_|  \___|\__,_|\__,_|  4 mins

	
	""")

	print('''
	Part 1: Lectio (Reading)
	Read the verse several times. Focus on one word or phrase intensely.
	If anything jumps out to you, dwell on that.
	''')
	# time.sleep(3)
	time.sleep(240)
	# playBell()

	print("""

	


















	""")



	# -- Meditatio -------------------------------------------------
	print("""
	

	         
 _ __ ___   ___  __| (_) |_ __ _| |_ ___ 
| '_ ` _ \ / _ \/ _` | | __/ _` | __/ _ 
| | | | | |  __/ (_| | | || (_| | ||  __/
|_| |_| |_|\___|\__,_|_|\__\__,_|\__\___|  4 mins




	""")



	print('''
	Part 2: Meditatio (Meditation)
	Put yourself into the scene. Does this scripture apply to you today?
	Ask the Holy Spirit to interpret this to you.
	''')
	# time.sleep(3)
	time.sleep(240)
	# playBell()



	print("""

	



















	""")

	# -- Oratio ----------------------------------------------------

	print("""
	
 _ __  _ __ __ _ _   _  ___ _ __ 
| '_ \| '__/ _` | | | |/ _ \ '__|
| |_) | | | (_| | |_| |  __/ |   
| .__/|_|  \__,_|\__, |\___|_|   4 mins
|_|              |___/ 

	
	""")


	print('''
	Part 3: Oratio (Prayer)
	Take all the thoughts, fears and ideas that have came up
	and offer them to the Lord.
	If there is a specific anxiety, offer it to the Lord.
	If you are especially thankful, pray a prayer of thanksgiving.
	''')
	# time.sleep(3)
	time.sleep(240)
	# playBell()

	# -- Contemplatio ------------------------------------------------

	print("""

	





















	""")

	print("""



                 _                       _       _       
  ___ ___  _ __ | |_ ___ _ __ ___  _ __ | | __ _| |_ ___ 
 / __/ _ \| '_ \| __/ _ \ '_ ` _ \| '_ \| |/ _` | __/ _ 
| (_| (_) | | | | ||  __/ | | | | | |_) | | (_| | ||  __/
 \___\___/|_| |_|\__\___|_| |_| |_| .__/|_|\__,_|\__\___|  4 mins
                                  |_|




	""")


	print("""

	





















	""")
	
	print('''
	Part 4: Contemplatio (Contemplation)
	Sit in silence with God
	''')

	time.sleep(250)
	# playBell()

	print('''
	Now go out and live for Christ
	''')

	time.sleep(7)



OfflineImap()


